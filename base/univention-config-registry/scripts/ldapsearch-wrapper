"""ldapsearch results without line break."""

from sys import stdin, stdout
from typing import IO, Iterator  # noqa F401


def main():
	# type: () -> None
	"""Unwrap LDIF."""
	try:
		for line in unwrap(stdin):
			stdout.write(line)
	except BrokenPipeError:
		pass


def unwrap(stream):
	# type: (IO[str]) -> Iterator[str]
	prev = ""
	for line in stream:
		if line[:1] in (' ', '\t'):
			prev = prev.rstrip("\n\r") + line[1:]
		else:
			if prev:
				yield prev
			prev = line

	if prev:
		yield prev


if __name__ == '__main__':
	main()
